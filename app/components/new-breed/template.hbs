<form>
  <div class="form-group">
    <label for="breed-name">Name</label>
    {{input value=name id="breed-name" class="form-control" placeholder="Breed Name"}}
  </div>

  <div class="form-group">
    <label for="activity-level">Activity Level</label>
    {{#power-select
      options=activityLevels
      selected=activityLevel
      selectedItemComponent="power-select-value-name"
      searchField="name"
      placeholder="Select an Activity Level"
      onfocus=(action "handleFocus")
      onchange=(action 'selectActivityLevel')
      as |level|
    }}
      {{level.name}}: {{level.description}}
    {{/power-select}}
  </div>

  <div class="form-group">
    <label for="maintenance-level">Maintenance Level</label>
    {{#power-select
      options=maintenanceLevels
      selected=maintenanceLevel
      selectedItemComponent="power-select-value-name"
      searchField="name"
      placeholder="Select a Maintenance Level"
      onfocus=(action "handleFocus")
      onchange=(action 'selectMaintenanceLevel')
      as |level|
    }}
      {{level.name}}: {{level.description}}
    {{/power-select}}
  </div>

  <div class="form-group">
    <label for="size">Size</label>
    {{#power-select
      options=sizes
      selected=size
      selectedItemComponent="power-select-value-name"
      searchField="name"
      placeholder="Select a Size"
      onfocus=(action "handleFocus")
      onchange=(action 'selectSize')
      as |size|
    }}
      {{size.name}}: {{size.description}}
    {{/power-select}}
  </div>

  <button class="btn" {{action 'saveBreed'}} disabled={{submitIsDisabled}}>Save</button>
</form>
